<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TizenSensor.MainPage">
	<ContentPage.Content>
		<StackLayout x:Name="mainLayout">
			<Label x:Name="titleLabel" Text="WearableML" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Entry x:Name="addrEntry" Text="192.168.0." IsTextPredictionEnabled="False" Keyboard="Numeric" IsEnabled="False" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Label x:Name="messageLabel" Text="Enter host address" FontSize="Micro" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Label x:Name="instructionLabel" Text="Sensor ready&#x0a;&#x0a;Press [Start] in the WearableML server" IsVisible="False" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Label x:Name="dataLabel" FontSize="Micro" HorizontalTextAlignment="Center" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
